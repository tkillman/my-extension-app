{
    "manifest_version": 3,
    "name": "my-extension-app",
    "description": "my-extension-app",
    "version": "1.0",
    "action": {
        "default_title": "Click to view a popup"
    },
    "background": {
        "service_worker": "background_bundle.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["https://developer.chrome.com/docs/extensions/mv3/*"],
            "js": ["content_bundle.js"]
        }
    ],
    "permissions": ["storage", "tabs"]
}
